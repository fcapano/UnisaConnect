<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="false"
    android:background="@color/orange_actionbar"
    android:gravity="center"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/banner_logo"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/banner_close_button"
        android:layout_width="21dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/transparent"
        android:padding="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_stat_delete" />

    <TextView
        android:id="@+id/banner_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/banner_close_button"
        android:layout_toRightOf="@id/banner_logo"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:text=""
        android:textColor="@android:color/white" />

</RelativeLayout>