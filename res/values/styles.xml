<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="icon">@drawable/ic_action_logo</item>
        <item name="android:icon">@drawable/ic_action_logo</item>
        <item name="background">@drawable/actionbar_orange</item>
        <item name="android:background">@drawable/actionbar_orange</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:titleTextStyle" tools:targetApi="11">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyEditText" parent="MyTheme_Orangy">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textCursorDrawable" tools:targetApi="12">@null</item>
        <item name="android:background">@color/activity_background_darker_lighter</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">7dp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="MyEditTextWhite" parent="@style/MyEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHighlight">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="verticalTextStyle" parent="android:Widget.TextView"></style>

    <style name="bigBackgroundTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:gravity">right|center_vertical</item>
        <!-- <item name="android:paddingBottom">40sp</item> -->
        <item name="android:paddingRight">10sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>